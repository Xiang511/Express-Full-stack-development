  <main>
    <div class="content">
      <div class="mainFrame">
        <div class="mainFrame-content">
          <div class="pic">
            <img src="/stylesheets/img/undraw_login_wqkt.png" alt="">
          </div>
          <div class="secFrame">
            <div class="txt">
              <h1>MetaWall</h1>
              <p>註冊帳號享受歡樂社交圈</p>
            </div>
            <form action="/users/sign_in" method="post">
              <div class="form-group">
                <input type="email" id="email" name="email" required placeholder="Email">
              </div>
              <div class="form-group">
                <input type="password" id="password" name="password" required placeholder="Password">
              </div>
              <% if (messages.error) { %>
                <p class="errorMessage"><%= messages.error %></p>
              <% } %>
              <div class="sign-group">
                <button type="submit">登入</button>
                <div class="grow"></div>
                <div class="sign-link">
                  <a href="/users/sign_up">註冊帳號</a>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>
